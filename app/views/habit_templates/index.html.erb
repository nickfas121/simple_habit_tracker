<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All habits
    </h1>

    <a href="/habits/new" class="btn btn-block btn-outline-secondary">
      Add a new habit
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Habit name
        </th>

        <th>
          User
        </th>

        <th>
          Actively tracking
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @habits.each do |habit| %>
      <tr>
        <!-- Display habit.id start -->
        <td>
          <%= habit.id %>
        </td>
        <!-- Display habit.id end -->

        <!-- Display habit.habit_name start -->
        <td>
          <%= habit.habit_name %>
        </td>
        <!-- Display habit.habit_name end -->

        <!-- Display habit.user_id start -->
        <td>
          <%= habit.user.created_at %>
        </td>
        <!-- Display habit.user_id end -->

        <!-- Display habit.actively_tracking start -->
        <td>
          <%= habit.actively_tracking %>
        </td>
        <!-- Display habit.actively_tracking end -->

        <!-- Display habit.created_at start -->
        <td>
          <%= time_ago_in_words(habit.created_at) %> ago
        </td>
        <!-- Display habit.created_at end -->

        <!-- Display habit.updated_at start -->
        <td>
          <%= time_ago_in_words(habit.updated_at) %> ago
        </td>
        <!-- Display habit.updated_at end -->

        <td>
          <a href="/habits/<%= habit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @habits, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
