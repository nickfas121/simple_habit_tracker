<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All habits
    </h1>

    <a href="/habits/new" class="btn btn-block btn-outline-secondary">
      Add a new habit
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "habit_templates/habits_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Habit name
        </th>

        <th>
          User
        </th>

        <th>
          Actively tracking
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @habits.each do |habit| %>
      <tr>
        <td>
          <%= habit.id %>
        </td>

        <td>
          <%= habit.habit_name %>
        </td>

        <td>
          <% if habit.user.present? %>
            <a href="/users/<%= habit.user.id %>">
              <%= habit.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= habit.actively_tracking %>
        </td>

        <td>
          <%= time_ago_in_words(habit.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(habit.updated_at) %> ago
        </td>

        <td>
          <a href="/habits/<%= habit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @habits, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
