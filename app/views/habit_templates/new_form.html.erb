<h1>
  Add a new habit
</h1>


<hr>

<form action="/create_habit" method="post">

  <div class="form-group">
    <label for="habit_name">
      Habit name
    </label>

    <input type="text" id="habit_name" name="habit_name" class="form-control">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-check">
    <input type="hidden" value="0" name="actively_tracking">
    <input id="actively_tracking" class="form-check-input" name="actively_tracking" type="checkbox">
    <label for="actively_tracking" class="form-check-label">
      Actively tracking
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create habit
  </button>
</form>

<hr>

<a href="/habits">
  Go back
</a>
