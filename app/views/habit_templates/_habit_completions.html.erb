<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Completions

    <a data-toggle="collapse" href="#habit_completions_new_form">
      Add completion
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @habit.completions.each do |completion| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/completions/<%= completion.id %>">
          <%= completion.habit_id %>
        </a>

        <a href="/delete_completion_from_habit/<%= completion.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="habit_completions_new_form">
        <%= render partial: "habit_templates/habit_completions_new_form" %>
      </div>
    </div>

  </ul>
</div>
