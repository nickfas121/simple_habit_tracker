<form action="/create_completion_from_habit" method="post">
<!-- Form completion end -->

  <!-- Label and input for habit_id start -->
  <!-- Input for habit_id start -->
  <input type="hidden" name="habit_id" value="<%= @habit.id %>">
  <!-- Input for habit_id end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @completion.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create completion
  </button>
</form>
