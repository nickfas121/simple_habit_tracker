<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Completion #<%= @completion.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/completions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/completions/<%= @completion.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit completion
        </a>
      </div>

      <div class="col">
        <a href="/delete_completion/<%= @completion.id %>" class="btn btn-block btn-outline-secondary">
          Delete completion
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Habit
      </dt>
      <dd>
        <% if @completion.habit.present? %>
          <a href="/habits/<%= @completion.habit_id %>">
            <%= @completion.habit.habit_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @completion.user.present? %>
          <a href="/users/<%= @completion.user_id %>">
            <%= @completion.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@completion.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@completion.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

