<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All completions
    </h1>

    <a href="/completions/new" class="btn btn-block btn-outline-secondary">
      Add a new completion
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "completion_templates/completions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Habit
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @completions.each do |completion| %>
      <tr>
        <td>
          <%= completion.id %>
        </td>

        <td>
          <% if completion.habit.present? %>
            <a href="/habits/<%= completion.habit.id %>">
              <%= completion.habit.habit_name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if completion.user.present? %>
            <a href="/users/<%= completion.user.id %>">
              <%= completion.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(completion.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(completion.updated_at) %> ago
        </td>

        <td>
          <a href="/completions/<%= completion.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @completions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
