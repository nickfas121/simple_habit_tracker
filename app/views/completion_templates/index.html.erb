<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All completions
    </h1>

    <a href="/completions/new" class="btn btn-block btn-outline-secondary">
      Add a new completion
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Habit
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @completions.each do |completion| %>
      <tr>
        <!-- Display completion.id start -->
        <td>
          <%= completion.id %>
        </td>
        <!-- Display completion.id end -->

        <!-- Display completion.habit_id start -->
        <td>
          <%= completion.habit_id %>
        </td>
        <!-- Display completion.habit_id end -->

        <!-- Display completion.user_id start -->
        <td>
          <%= completion.user_id %>
        </td>
        <!-- Display completion.user_id end -->

        <!-- Display completion.created_at start -->
        <td>
          <%= time_ago_in_words(completion.created_at) %> ago
        </td>
        <!-- Display completion.created_at end -->

        <!-- Display completion.updated_at start -->
        <td>
          <%= time_ago_in_words(completion.updated_at) %> ago
        </td>
        <!-- Display completion.updated_at end -->

        <td>
          <a href="/completions/<%= completion.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
